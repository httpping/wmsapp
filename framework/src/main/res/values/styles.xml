<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>

    </style>


    <!--EditText输入内容不合法时提示颜色-->
    <style name="EditTextErrorColor" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/color_CA4343</item>
    </style>


    <style name="EditTextColor" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/color_999999</item>
    </style>
    <style name="LoginTilFloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="AppTabLayout" parent="@style/Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">@dimen/dp_3</item>
        <item name="tabPaddingStart">@dimen/dp_16</item>
        <item name="tabPaddingEnd">@dimen/dp_16</item>
        <item name="tabMode">scrollable</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="AppTabTextAppearance" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textColor">@color/color_99ffffff</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/dp_18</item>
         <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BaseToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="layout_collapseMode">pin</item>
        <item name="navigationIcon">@mipmap/arrow_back</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="title">@string/app_name</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ToolbarTitleTextAppearance">
        <item name="android:textSize">@dimen/dp_18</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="MyAccountListTextView">
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/dp_24</item>
        <item name="android:textColor">@color/color_2d2d2d</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/dp_12</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


    <style name="ToolbarStyle" parent="@style/BaseToolbarStyle">
        <!--<item name="popupTheme">@style/ToolbarPopupTheme</item>-->
    </style>

